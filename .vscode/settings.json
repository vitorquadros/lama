{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.fixAll.eslint": "explicit"
    // "source.organizeImports.biome": "always"
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "mjs"],
  "editor.wordWrapColumn": 100,

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "app.json": true,
    "__tests__": true,
    ".git": true,
    ".gitignore": true,
    "README.md": true,
    ".gitattributes": true,
    ".vscode": true,
    ".bundle": true,
    ".buckconfig": true,
    ".flowconfig": true,
    ".watchmanconfig": true,
    ".ruby-version": true,
    "Gemfile": true,
    "metro.config.js": true,
    "jest.config.js": true,
    "jest.setup.ts": true,
    ".babelrc": true,
    "biome.json": true,
    "coverage": true,
    "node_modules": true,
    "next-env.d.ts": true,
    "next.config.js": true,
    "prettier.config.js": true,
    "tsconfig.json": true,
    "_node-version": true,
    ".eslintrc.json": true,
    ".prettierrc.js": true,
    "babel.config.js": true,
    "yarn.lock": true,
    "package-lock.json": true,
    ".editorconfig": true,
    ".next": true,
    "next.config.mjs": true,
    ".prettierrc": true,
    "android": true,
    "ios": true,
    ".dart_tool": true,
    ".idea": true,
    ".metadata": true,
    ".flutter-plugins": true,
    ".flutter-plugins-dependencies": true,
    ".packages": true,
    "pubspec.lock": true,
    "analysis_options.yaml": true,
    "*.iml": true,
    "test": true,
    "tailwind.config.js": true,
    "vite.config.js": true,
    "postcss.config.js": true,
    "phpunit.xml": true,
    "composer.lock": true,
    "composer.json": true,
    "artisan": true
  },
  "explorerExclude.backup": {},
  "typescript.tsdk": "node_modules/typescript/lib"
}
