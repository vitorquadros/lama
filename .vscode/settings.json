{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.fixAll.eslint": "explicit"
    // "source.organizeImports.biome": "always"
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "mjs"],
  "editor.wordWrapColumn": 100,

  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "app.json": false,
    "__tests__": false,
    ".git": false,
    ".gitignore": false,
    "README.md": false,
    ".gitattributes": false,
    ".vscode": false,
    ".bundle": false,
    ".buckconfig": false,
    ".flowconfig": false,
    ".watchmanconfig": false,
    ".ruby-version": false,
    "Gemfile": false,
    "metro.config.js": false,
    "jest.config.js": false,
    "jest.setup.ts": false,
    ".babelrc": false,
    "biome.json": false,
    "coverage": false,
    "jsconfig.json": false,
    "LICENSE": false,
    "node_modules": false,
    "next-env.d.ts": false,
    "next.config.js": false,
    "prettier.config.js": false,
    "tsconfig.json": false,
    "_node-version": false,
    ".eslintrc.json": false,
    ".prettierrc.js": false,
    "babel.config.js": false,
    "yarn.lock": false,
    "package-lock.json": false,
    ".editorconfig": false,
    ".next": false,
    "next.config.mjs": false,
    ".prettierrc": false,
    "android": false,
    "ios": false,
    ".dart_tool": false,
    ".idea": false,
    ".metadata": false,
    ".flutter-plugins": false,
    ".flutter-plugins-dependencies": false,
    ".packages": false,
    "pubspec.lock": false,
    "analysis_options.yaml": false,
    "*.iml": false,
    "test": false,
    "tailwind.config.js": false,
    "vite.config.js": false,
    "postcss.config.js": false,
    "phpunit.xml": false,
